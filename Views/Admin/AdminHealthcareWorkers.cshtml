@model IEnumerable<LVTS.Models.Worker>

@{
    ViewData["Title"] = "Healthcare Workers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <partial name="_AdminSidebarPartial" />

    <div class="admin-content">
        <h1>Healthcare Workers</h1>
        <button class="btn btn-primary" onclick="window.location.href='@Url.Action("AdminAddWorker", "Admin")'">Add New Worker</button>

        <table class="admin-table table table-bordered">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>Age</th>
                    <th>Address</th>
                    <th>Phone Number</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var worker in Model)
                {
                    <tr>
                        <td>@worker.FirstName @worker.LastName</td>
                        <td>@worker.Age</td>
                        <td>@worker.Address</td>
                        <td>@worker.ContactNumber</td>
                        <td>@worker.Email</td>
                        <td>@worker.UserName</td>
                        <td>@worker.Role</td>
                        <td>
                            <button class="btn btn-primary">
                                <a class="text-decoration-none text-white" asp-route-id="@worker.Id" asp-controller="Admin" asp-action="AdminEditWorker">Edit</a>
                            </button>
                            <form asp-action="AdminDeleteWorker" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this worker?');">
                                <input type="hidden" name="id" value="@worker.Id" />
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>